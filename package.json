{
  "name": "judge-gym",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.1.27",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo run start --filter=@judge-gym/lab",
    "test": "turbo test",
    "typecheck": "bun x tsc -p packages/engine/tsconfig.json --noEmit && bun x tsc -p packages/lab/tsconfig.json --noEmit",
    "typecheck:broken": "turbo run typecheck"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.8.7",
    "typescript": "^5.9.3"
  }
}
