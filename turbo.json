{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["bun.lockb"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": false
    },
    "typecheck": {
      "cache": false
    }
  }
}
